<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/auth_register_email_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="500dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/colorTextWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edittext_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/auth_register_name_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/colorTextWhite"
        app:layout_constraintEnd_toEndOf="@id/auth_register_email_input"
        app:layout_constraintStart_toStartOf="@id/auth_register_email_input"
        app:layout_constraintTop_toTopOf="@id/auth_register_email_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edittext_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/auth_register_password_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/colorTextWhite"
        app:layout_constraintEnd_toEndOf="@id/auth_register_name_input"
        app:layout_constraintStart_toStartOf="@id/auth_register_name_input"
        app:layout_constraintTop_toTopOf="@id/auth_register_name_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/auth_register_confirm_password_input"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:boxBackgroundColor="@color/colorPrimaryLight"
        app:boxStrokeColor="@color/colorTextWhite"
        app:layout_constraintEnd_toEndOf="@id/auth_register_password_input"
        app:layout_constraintStart_toStartOf="@id/auth_register_password_input"
        app:layout_constraintTop_toTopOf="@id/auth_register_password_input">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edittext_confirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorTextBlack" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/auth_btn_register"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Register"
        android:textColor="@color/colorTextWhite"
        app:layout_constraintEnd_toEndOf="@+id/auth_register_confirm_password_input"
        app:layout_constraintStart_toStartOf="@+id/auth_register_confirm_password_input"
        app:layout_constraintTop_toBottomOf="@+id/auth_register_confirm_password_input" />

</androidx.constraintlayout.widget.ConstraintLayout>